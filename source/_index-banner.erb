<header
	data-scroll-animation='{
		"parallax-y":{
			"speed":0.1
		}
	}'
>
	<div 
		class="inner" 
		data-scroll-animation='{
			"fade-out":{
				"start":10,
				"end":20,
				"min":1,
				"max":0
			}

		}', 
		
		data-preserve-aspect="true" 
		data-preserve-aspect-options='{
			"width":1895,
			"height":800
		}'
	>
		<canvas id="webgl-banner"></canvas>

		<div class="wordmark-container">
			<img 
				src="images/wordmark.png"
				class="wordmark"
				alt="Wollstonecraft"
				data-scroll-animation='{
					"fade-out":{
						"start":-6,
						"end":3,
						"min":1,
						"max":0
					}
				}'
			/>
			<div 
				class="slogan"
				data-scroll-animation='{
					"fade-out":{
						"start":-4,
						"end":-1,
						"min":1,
						"max":0
					}						
				}'
			>					
				<%= globals["slogan"] %>
			</div>
		</div>
		

	</div>
	
	
	<!--
	<div id="index-banner" class="gradient" >
		
		
		
		
	</div>
	
	!-->
</header>