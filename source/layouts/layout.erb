<!doctype html>
<html>
	<head>
		<%= partial "head" %>
	</head>
	<%= partial "cogs" %>	
	<body>
	
		<%= partial "header-nav" %>
		<header data-scroll-fade="true" data-scroll-start="8" data-scroll-end="15">
			<div class="inner">
				<div class="gradient">
					<%= banner %>	
					<div class="wordmark-container">
						<img  data-scroll-fade="true" data-scroll-start="0" data-scroll-end="8" class="wordmark" src="images/wordmark.png" alt="Wollstonecraft"/>
					</div>
				</div>
			</div>
		</header>
		
		<main>		
			<div class="content">
				<%= breadcrumb %>
				<% unless current_page.data["box-nav-title"].nil? -%>
					<h1><%=current_page.data["box-nav-title"]%></h1>
				<% end %>
				<%= category_nav current_page.data["box-nav"] %>
				
				<%	unless yield.empty?	-%>
					<article>
						<%=yield%>
					</article>
				<% end -%>		
			</div>			
		</main>		

		<%= partial "footer" %>						
	</body>
</html>
